  <div id="heading_row" class="row">
    <%= render "metrics/heading", title: "One-Time Revenue" %>
  </div>

  <% if !@metrics.blank? %>

  <div class="row" id="chart_tile">
    <%= render "chart_tile" %>
  </div>

  <div class="row" id="metric_tiles">
    <%= render "metric_tiles" %>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <div class="panel panel-default animated fadeIn">
        <div class="panel-body">
          <%= column_chart current_user.yearly_revenue_per_product(charge_type: "onetime_revenue", date: @date) %>
        </div>
        <div class="panel-footer text-center">
          <h5>One-Time Revenue (Last 12 Months)</h5>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="panel panel-default animated fadeIn">
        <div class="panel-body">
          <%= pie_chart current_user.yearly_revenue_per_product(charge_type: "onetime_revenue", date: @date) %>
        </div>
        <div class="panel-footer text-center">
          <h5>One-Time Split (Last 12 Months)</h5>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="panel panel-default animated fadeIn">
        <div class="panel-body">
          <%= pie_chart current_user.yearly_revenue_per_country(date: @date, charge_type: "onetime_revenue") %>
        </div>
        <div class="panel-footer text-center">
          <h5>Revenue per Country (Last 12 Months)</h5>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <div class="panel panel-default animated fadeIn">
        <div class="panel-body">
          <%= column_chart current_user.total_revenue_per_app(from_date: @first_metric_date, date: @date, charge_type: "onetime_revenue") %>
        </div>
        <div class="panel-footer text-center">
          <h5>One-Time Revenue (TOTAL)</h5>
        </div>
      </div>
    </div>
  </div>

  <% else %>
    <div class="row">
      <div class="col-sm-12">
        <div class="panel panel-default animated shake">
          <div class="panel-body">
            <div class="col-sm-12 text-center">
              <h2>Hmmm...</h2>
                <p>We didn't find any One-Time Revenue! :(</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
